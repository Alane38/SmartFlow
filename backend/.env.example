# Database
DATABASE_URL="postgresql://username@localhost:5432/smartflow?schema=public"

# Alternative databases (uncomment to use)
# MySQL: DATABASE_URL="mysql://user:password@localhost:3306/smartflow"
# SQLite: DATABASE_URL="file:./dev.db"

# Application
NODE_ENV=development
PORT=4000

# JWT (configure later for authentication)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Email (configure later for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000