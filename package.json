{
  "name": "smartflow",
  "version": "1.0.0",
  "description": "SmartFlow - Plateforme pour freelancers et micro-entrepreneurs",
  "private": true,
  "scripts": {
    "install": "cd backend && pnpm install && cd ../frontend && pnpm install",
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:backend": "cd backend && pnpm run start",
    "dev:frontend": "cd frontend && pnpm run dev",
    "build": "concurrently \"pnpm run build:backend\" \"pnpm run build:frontend\"",
    "build:backend": "cd backend && pnpm run build",
    "build:frontend": "cd frontend && pnpm run build",
    "start": "concurrently \"pnpm run start:backend\" \"pnpm run start:frontend\"",
    "start:backend": "cd backend && pnpm run start:prod",
    "start:frontend": "cd frontend && pnpm run start",
    "prisma:studio": "cd backend && pnpm run prisma:studio",
    "prisma:push": "cd backend && pnpm run prisma:push",
    "prisma:generate": "cd backend && pnpm run prisma:generate"
  },
  "devDependencies": {
    "concurrently": "9.2.1"
  }
}
